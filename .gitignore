#blog-title-inner{
max-width: 100%;
 height: 120px;
 margin: 5px 0px;
 background-image:url(http://cdn-ak.f.st-hatena.com/images/fotolife/n/nappai1/20161124/20161124225400.gif?1479995675);
 background-repeat: no-repeat;
}

#blog-title-inner h1 {
height: 30px;
margin: 0 auto;
}

@keyframes cloudmove {
	0% {background-position: 115% 0;}
	100% {background-position: -15% 0;}
}
@-webkit-keyframes cloudmove {
	0% {background-position: 115% 0;}
	100% {background-position: -100% 0;}

}
@-moz-keyframes cloudmove {
	0% {background-position: 115% 0;}
	100% {background-position: -100% 0;}

}

/*SMP*/
@media screen and (max-width: 375px){
#blog-title-inner{
animation: cloudmove 10s linear infinite;
	0% {background-position: 0% 0;}
	100% {background-position: -15% 0;}
}
}

/*TAB*/
@media only screen and (max-width: 1025px) and (min-width: 376px){
#blog-title-inner{
animation: cloudmove 15s linear infinite;
	0% {background-position: 0% 0;}
	100% {background-position: -15% 0;}
}
}

/*PC*/
@media screen and (min-width: 1025px){
#blog-title-inner{
width: 100%;
animation: cloudmove 50s linear infinite;
-webkit-animation: cloudmove 25s linear infinite;
-moz-animation: cloudmove 25s linear infinite;
}
}
